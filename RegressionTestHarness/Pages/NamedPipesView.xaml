<UserControl x:Class="RegressionTestHarness.Pages.NamedPipesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RegressionTestHarness"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="170" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

            <StackPanel 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" 
                CanVerticallyScroll="True" 
                CanHorizontallyScroll="False"
                Margin="5">

                <Button 
                    Content="Start Server" 
                    Height="30" 
                    HorizontalAlignment="Stretch" 
                    Margin="2.5" 
                    Click="btnStartServer_Click"
                    Background="DarkGreen" 
                    Foreground="White"
                    BorderBrush="Transparent" />

                <Button 
                    Content="Stop Server" 
                    Height="30" 
                    HorizontalAlignment="Stretch" 
                    Margin="2.5" 
                    Click="btnStopServer_Click"
                    Background="DarkRed" 
                    Foreground="White"
                    BorderBrush="Transparent" />

                <Button 
                    Content="Send Message" 
                    Height="30" 
                    HorizontalAlignment="Stretch" 
                    Margin="2.5" 
                    Click="btnSendTestMessage_Click"
                    Background="DarkGoldenrod" 
                    Foreground="White"
                    BorderBrush="Transparent" />

            </StackPanel>

        </ScrollViewer>

        <Grid Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock 
                    Grid.Row="0"
                    Text="Server Status:" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    FontSize="18" />

                <TextBlock 
                    Grid.Row="0"
                    Text="Not running" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    FontSize="18" 
                    Margin="115, 0, 0, 0" 
                    FontWeight="Bold" />

                <Grid Grid.Row="1">
                    <Border 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Stretch"
                        BorderThickness="1" 
                        BorderBrush="Black">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock 
                                Grid.Row="0"
                                Text="Server Log" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center" 
                                FontSize="14" />

                            <Button
                                Grid.Row="0"
                                Content="Clear"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Right"
                                Width="50"
                                FontSize="7"
                                Click="btnClearServerLog_Click"/>

                            <ListBox 
                                x:Name="LstServerLog"
                                Grid.Row="1"
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Stretch"
                                Width="150"
                                Background="Transparent"
                                Foreground="DarkSlateGray"/>
                        </Grid>
                    </Border>

                    <Border 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Stretch"
                        Margin="160, 0, 0, 0"
                        BorderThickness="1" 
                        BorderBrush="Black">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock 
                            Grid.Row="0"
                            Text="Client Log" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            FontSize="14" />

                            <Button
                                Grid.Row="0"
                                Content="Clear"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Right"
                                Width="50"
                                FontSize="7"
                                Click="btnClearClientLog_Click" />

                            <ListBox 
                                x:Name="LstClientLog"
                                Grid.Row="1"
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Stretch"
                                Width="150"
                                Background="Transparent"
                                Foreground="DarkSlateGray"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
